<div class="row aircrafts_container">
  <div class="col-md-4">
    <div class="form_header text-center">
      <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Catalogo
    </div>
    <%= form_for @aircraft, remote: true do |f| %>
      <div class="form-group">
        <%= f.label :manufacturer, 'Fabricante' %>
        <%= f.text_field :manufacturer, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :trade_name, 'Nombre comercial' %>
        <%= f.text_field :trade_name, class: 'form-control' %>
      </div>
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-8">
    <div class="aircraft_list">
      <div class="row table_head">
        <div class="col-md-3">Fabricante</div>
        <div class="col-md-3">Nombre comercial</div>
        <div class="col-md-6">Acciones</div>
      </div>
      <%= render  @aircrafts %>
    </div>
  </div>
</div>
<div id="modal-container"></div>


