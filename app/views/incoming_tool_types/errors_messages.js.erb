<% if !@movement_type.new_record? %>
  $('#modal').modal('hide');
  $('#modal').on('hidden.bs.modal', function () {
    $('.modal_container').html('<%= escape_javascript(render partial: 'errors_details', locals: {movement_type: @movement_type}) %>');
    $('#modal').modal('show');
  });
<% else %>
  $('.modal_container').html('<%= escape_javascript(render partial: 'errors_details', locals: {movement_type: @movement_type}) %>');
  $('#modal').modal('show');
<% end %>

