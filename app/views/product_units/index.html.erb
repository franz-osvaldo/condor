<div class="row">
  <div class="col-md-4 form_container">
    <div class="form_header text-center">
      <i class="fa fa-balance-scale" aria-hidden="true"></i> Unidades
    </div>
    <%= form_for @product_unit, remote: true do |f| %>
        <div class="form-group">
          <%= f.label :name, 'Nombre' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <%= f.submit 'Guardar', class: 'btn btn-primary bt-sm' %>
    <% end %>
  </div>
  <div class="col-md-8">
    <div class="table_container">
      <div class="row table_head">
        <div class="col-md-6">Unidad</div>
        <div class="col-md-6">Administrar</div>
      </div>
      <%= render @product_units %>
    </div>
  </div>
</div>
<div class="modal_container"></div>