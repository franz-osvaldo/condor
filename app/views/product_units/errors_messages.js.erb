<% if !@product_unit.new_record? %>
  $('#modal').modal('hide');
  $('#modal').on('hidden.bs.modal', function () {
    $('.modal_container').html('<%= escape_javascript(render partial: 'errors_details', locals: {product_unit: @product_unit}) %>');
    $('#modal').modal('show');
  });
<% else %>
  $('.modal_container').html('<%= escape_javascript(render partial: 'errors_details', locals: {product_unit: @product_unit}) %>');
  $('#modal').modal('show');
<% end %>

