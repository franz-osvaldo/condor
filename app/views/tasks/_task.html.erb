<div class="row" id="<%= dom_id(task) %>">
  <div class="col-md-4 item_crud overflowed"><%= task.task_number %></div>
  <div class="col-md-4 item_crud overflowed"><%= task.task_number %></div>
  <div class="col-md-4 small_btn">
    <%= link_to task, remote: true, class:'btn btn-info btn-sm' do %>
        <span class="glyphicon glyphicon-search"></span>
    <% end %>
    <%= link_to task, class: 'btn btn-warning btn-sm', remote: true do %>
        <span class="glyphicon glyphicon-pencil"></span>
    <% end %>
    <button type="button" class="btn btn-danger btn-sm" aria-label="Left Align" data-toggle="modal" data-target="#modal-<%= dom_id(task) %>">
      <span class="glyphicon glyphicon-trash"></span>
    </button>
  </div>

</div>

