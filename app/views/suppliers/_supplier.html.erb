<div class="row" id="<%= dom_id(supplier) %>">
  <div class="col-md-6"><%= supplier.supplier %></div>
  <div class="col-md-2">
    <%= link_to supplier, class: 'btn btn-info btn-sm', remote: true do  %>
        <span class="glyphicon glyphicon-search"></span> Mostrar
    <% end %>
  </div>
  <div class="col-md-2">
    <%= link_to edit_supplier_path(supplier), class: 'btn btn-warning btn-sm', remote: true  do %>
        <span class="glyphicon glyphicon-pencil"></span> Editar
    <% end %>
  </div>
  <div class="col-md-2">
    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target = "#modal-<%= dom_id(supplier) %>">
      <span class="glyphicon glyphicon-trash"></span> Eliminar
    </button>
  </div>
</div>

<div id="modal-<%= dom_id(supplier) %>" class="modal fade modal_delete" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar
      </div>
      <div class="modal-body">
        <p>Â¿Estas seguro?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
        <%= link_to supplier, class: 'btn btn-danger btn-sm', method: :delete, remote: true do %>
            Eliminar
        <% end %>
      </div>
    </div>
  </div>
</div>