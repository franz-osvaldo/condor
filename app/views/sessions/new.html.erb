<div class="row login_form">
  <div class="col-md-9"></div>
  <div class="col-md-2">
    <%= form_for :session, url: login_path do |f| %>
        <div class="row">
            <div class="form-group">

              <%= f.email_field :email, class: 'form-control', placeholder: 'Correo electrónico' %>
            </div>
        </div>
        <div class="row">
            <div class="form-group">

              <%= f.password_field :password, class: 'form-control', placeholder: 'Contraseña' %>
            </div>
        </div>
        <div class="row">
          <div class="form-group">
            <%= f.submit 'Iniciar sesión', class: 'btn' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
