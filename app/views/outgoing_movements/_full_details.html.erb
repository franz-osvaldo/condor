<div id="modal" class="modal fade modal_document" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>

        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Mostrar
      </div>
      <div class="modal-body text-center">
        <br>
        <strong>Numero de folio</strong>
        <p><%= outgoing_movement.folio %></p>
        <strong>Tipo de movimiento</strong>
        <p><%= outgoing_movement.outgoing_movement_type.movement_type %></p>
        <strong>Destinatario</strong>
        <p><%= outgoing_movement.receiver.receiver %></p>
        <strong>Fecha de creaci√≥n</strong>
        <p><%= outgoing_movement.created_at.to_date %></p>
        <strong>Productos</strong>
        <div class="table_container">
          <div class="row table_header">
            <div class="col-md-3">PN</div>
            <div class="col-md-3">Descripcion</div>
            <div class="col-md-3">SN</div>
            <div class="col-md-3">Cantidad</div>
          </div>
          <div class="nano body_container">
            <div class="content">
              <% outgoing_movement.outgoing_details.each do |detail| %>
                  <div class="row item">
                    <div class="col-md-3"><%= detail.product.part_number %></div>
                    <div class="col-md-3"><%= detail.product.description %></div>
                    <div class="col-md-3"><%= ProductQuantity.find(detail.product_quantity_id).serial_number %></div>
                    <div class="col-md-3"><%= detail.quantity %></div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>