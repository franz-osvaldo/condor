<div id="modal" class="modal fade modal_show" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>

        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Mostrar
      </div>
      <div class="modal-body">
        <strong>Tipo de movimiento: </strong> <%= outgoing_movement.outgoing_movement_type.movement_type %> <br>
        <strong>Destinatario: </strong> <%= outgoing_movement.receiver.receiver %> <br>
        <% outgoing_movement.outgoing_details.each do |detail| %>
            <strong>Cantidad: </strong><%= detail.quantity %> <br>

        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>