<div class="row table_row">
  <div class="col-md-4">
    <%= product.description %>
  </div>
  <div class="col-md-6">
    <input type="text" name="outgoing_details[][quantity]" class="form-control">
  </div>
  <input type="hidden" name="outgoing_details[][expiration_date]" value="<%= product.expiration_date %>">
  <input type="hidden" name="outgoing_details[][product_id]" value="<%= product.product.id %>">
  <div class="col-md-2 text-center">
    <button type="button" class="btn btn-danger delete_row">
      <span class="glyphicon glyphicon-trash"></span>
    </button>
  </div>

</div>


