<div class="row my_breadcrumb">
  <ul id="breadcrumb">
    <li>
      <%= link_to aircrafts_path do %>
        <%= @component.system.aircraft.trade_name %>
      <% end %>
    </li>
    <li>
      <%= link_to aircraft_systems_path(@component.system.aircraft) do %>
        <%= @component.system.title %>
      <% end %>
    </li>
    <li>
      <%= link_to system_components_path(@component.system) do %>
        <%= @component.name %>
      <% end %>
    </li>
    <li>
      <%= link_to '#' do %>
        Partes
      <% end %>
    </li>
  </ul>
</div>
<div class="row parts_container">
  <div class="col-md-3">
    <div class="form_header text-center">
      <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Partes
    </div>
    <%= form_for([@component, @part], remote: true) do |f| %>
        <div class="form-group">
          <%= f.label :part_number, 'Numero de parte' %>
          <%= f.text_field :part_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description, 'Descripcion' %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
        <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-9">
    <div class="part_list">
      <div class="row table_head">
        <div class="col-md-3">Numero de parte</div>
        <div class="col-md-3">Descripcion</div>
        <div class="col-md-6">AdministraciÃ³n</div>
      </div>
      <%= render @parts %>
    </div>
  </div>
</div>
<div id="modal_container"></div>