<div class="row" id="<%= dom_id(system) %>">
  <div class="col-md-2 system_field">
    <%= system.chapter_number %>
  </div>
  <div class="col-md-2 system_field">
    <%= system.title %>
  </div>
  <div class="col-md-2">
    <%= link_to system, class: 'btn btn-info btn-sm', remote: true do %>
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Mostrar
    <% end %>
  </div>
  <div class="col-md-2">
    <%= link_to edit_system_path(system), class: 'btn btn-warning btn-sm', remote: true  do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
    <% end %>
  </div>
  <div class="col-md-2">
    <button type="button" class="btn btn-danger btn-sm" aria-label="Left Align" data-toggle="modal" data-target="#modal-<%= dom_id(system) %>">
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar
    </button>
  </div>
  <div class="col-md-2">
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle btn-sm" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Opciones
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
        <li>
          <%= link_to system_components_path(system)  do %>
              <span class="glyphicon glyphicon-list" aria-hidden="true"></span> Sistemas
          <% end %>
        </li>
        <li>
          <%= link_to system_scheduled_inspections_path(system)  do %>
              <span class="glyphicon glyphicon-list" aria-hidden="true"></span> Inspecciones programadas
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<div id="modal-<%= dom_id(system) %>" class="modal fade modal_delete" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar
      </div>
      <div class="modal-body">
        <p>Â¿Estas seguro?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
        <%= link_to system, class: 'btn btn-danger btn-sm', method: :delete, remote: true do %>
            Eliminar
        <% end %>
      </div>
    </div>
  </div>
</div>