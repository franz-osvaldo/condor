<div class="row my_breadcrumb">
  <ul id="breadcrumb">
    <li>
      <%= link_to aircrafts_path do %>
          <%= @aircraft.trade_name %>
      <% end %>
    </li>
    <li>
      <%= link_to '#' do %>
          Sistemas
      <% end %>
    </li>
  </ul>
</div>
<div class="row systems_container">
  <div class="col-md-3">
    <div class="form_header text-center">
      <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Sistemas
    </div>
    <%= form_for([@aircraft, @system], remote: true) do |f| %>
      <div class="form-group">
        <%= f.label :chapter_number, 'ATA' %>
        <%= f.number_field :chapter_number, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :title, 'Titulo' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-9">
    <div class="system_list">
      <div class="row table_head">
        <div class="col-md-2">ATA</div>
        <div class="col-md-2">Titulo</div>
        <div class="col-md-6">Administraci√≥n</div>
        <div class="col-md-2">Acciones</div>
      </div>
      <%= render @aircraft.systems %>
    </div>
  </div>
</div>
<div id="modal_container"></div>