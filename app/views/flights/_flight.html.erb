<div class="row"  id="<%= dom_id(flight) %>">
  <div class="col-md-6 flight_field">VUELO-<%= flight.id %> </div>
  <div class="col-md-2">
    <%= link_to  flight, class: 'btn btn-info btn-sm' do %>
        <span class="glyphicon glyphicon-search"></span> Mostrar
    <% end %>
  </div>
  <div class="col-md-2">
    <%= link_to edit_flight_path(flight), class: 'btn btn-warning btn-sm' do %>
        <span class="glyphicon glyphicon-pencil"></span> Editar
    <% end %>
  </div>
  <div class="col-md-2">
    <button type="button" class="btn btn-danger btn-sm" aria-label="Left Align" data-toggle="modal" data-target="#modal-<%= dom_id(flight) %>">
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar
    </button>
  </div>
</div>

<div id="modal-<%= dom_id(flight) %>" class="modal fade modal_delete" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar
      </div>
      <div class="modal-body">
        <p>Â¿Estas seguro?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
        <%= link_to flight_path(flight), class: 'btn btn-danger btn-sm', method: :delete, remote: true do %>
            Eliminar
        <% end %>
      </div>
    </div>
  </div>
</div>
