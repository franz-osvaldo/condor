<div class="row my_breadcrumb">
  <ul id="breadcrumb">
    <li>
      <%= link_to '#' do %>
          Flota
      <% end %>
    </li>
  </ul>
</div>

<div class="row fleets_container">
  <div class="col-md-3">
    <div class="form_header text-center">
      <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Flota
    </div>
    <%= form_for @fleet, remote: true do |f| %>
      <div class="form-group">
        <%= f.label :aircraft_id, 'Aeronave' %>
        <%= f.collection_select(:aircraft_id, @aircrafts, :id, :trade_name,{prompt: 'Por favor seleccione'}, {class:'form-control'}) %>
      </div>
      <div class="form-group">
        <%= f.label :name, 'Nombre' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :aircraft_registration, 'Matricula' %>
        <%= f.text_field :aircraft_registration, class: 'form-control' %>
      </div>
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-9">
    <div class="fleet_list">
      <div class="row table_head">
        <div class="col-md-3">Modelo</div>
        <div class="col-md-3">Matricula</div>
        <div class="col-md-6">Administraci√≥n</div>
      </div>
      <%= render @fleets %>
    </div>
  </div>
</div>
<div id="modal_container"></div>